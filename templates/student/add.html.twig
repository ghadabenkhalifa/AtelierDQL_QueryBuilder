{% extends 'base.html.twig' %}
{% block title %}Add Student{% endblock %}

{% block body %}
    <div class="my-4 d-flex justify-content-center">
        <div class="col-4 my-5">
            <h1 class="h3 mb-5 font-weight-normal text-center">Ajouter un étudiant</h1>
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

            <div class="form-group">
                <div class="col-12 control-label">
                    {{ form_label(form.nsc,"Numéro d'inscription") }}
                </div>
                <div class="col-12">
                    {{ form_widget(form.nsc,{'attr':{'class':'form-control'}}) }}
                </div>
                <span class="alert-danger">
            {{ form_errors(form.nsc) }}
        </span>
            </div>
            <div class="form-group">
                <div class="col-12 control-label">
                    {{ form_label(form.email,"Email") }}
                </div>
                <div class="col-12">
                    {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                </div>
                <span class="alert-danger">
            {{ form_errors(form.email) }}
        </span>
            </div>


            <div class="form-group">
                <div class="col-12 control-label">
                    {{ form_label(form.classroom,"Classroom") }}
                </div>
                <div class="col-12">
                    {{ form_widget(form.classroom,{'attr':{'class':'form-control'}}) }}
                </div>
                <span class="alert-danger">
            {{ form_errors(form.classroom) }}
        </span>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-4">
                    <input type="submit" value="Ajouter" class="btn btn-primary"/>
                </div>
            </div>
            {{ form_end(form) }}


        </div>
    </div>
{% endblock %}
