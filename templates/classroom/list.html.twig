<h1> List of class </h1>

<table border ="1">
    <tr>
        <th >ID</th>
        <th >Name</th>
        <th>Action</th>
    </tr>
    {% for classroom in list %}
        <tr>
            <td>
                {{ classroom.id }}
            </td>
            <td>
                {{ classroom.name }}
            </td>
            <td>
                <a href="{{ path('updateClassroom', {'id': classroom.id}) }}"> update</a>
                <a href={{ path('deleteClassroom',{'id':classroom.id}) }}>delete</a>
                <a href={{ path('showClassroom',{'id':classroom.id}) }}>Show</a>

            </td>

        </tr>
    {% endfor %}

</table>
<a href={{ path('createform') }}>Add new class </a>
